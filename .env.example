# Fouler-Play Environment Configuration
# Copy this to .env and fill in your values

# === Pokemon Showdown Credentials ===
PS_USERNAME=YOUR_USERNAME
PS_PASSWORD=YOUR_PASSWORD
PS_WEBSOCKET_URI=wss://sim3.psim.us/showdown/websocket
PS_FORMAT=gen9ou

# === Team Configuration ===
TEAM_NAMES=gen9/ou/fat-team-1-stall,gen9/ou/fat-team-2-pivot,gen9/ou/fat-team-3-dondozo
MAX_CONCURRENT_BATTLES=3
SEARCH_PARALLELISM=1
MAX_MCTS_BATTLES=3

# === Bot Logging ===
BOT_LOG_LEVEL=DEBUG
BOT_LOG_TO_FILE=1

# === OBS Streaming (REQUIRED for battle display) ===
# These names MUST match exactly the Browser Source names in your OBS scene.
# Create 3 Browser Sources in OBS named "Battle Slot 1", "Battle Slot 2", "Battle Slot 3".
# The server controls their URLs via obs-websocket. Do NOT use the /obs iframe page.
OBS_WS_HOST=localhost
OBS_WS_PORT=4455
OBS_WS_PASSWORD=
OBS_BATTLE_SOURCES=Battle Slot 1,Battle Slot 2,Battle Slot 3
OBS_IDLE_URL=http://localhost:8777/idle
OBS_FORCE_REFRESH=1
OBS_REFRESH_PAUSE_MS=120
OBS_SYNC_INTERVAL_SEC=2

# === Battle Timeouts ===
BATTLE_MESSAGE_TIMEOUT_SEC=300
BATTLE_STALE_STRIKES=2
BATTLE_STALE_DISPLAY_GRACE_SEC=900
DECISION_TIMEOUT_SEC=25
RESUME_ACTIVE_BATTLES=1
RESUME_MAX_AGE_SEC=900
RESUME_JOIN_TIMEOUT_SEC=30

# === ELO Tracking ===
# Set these to your bot's Showdown user ID for live ELO display
SHOWDOWN_PROFILE_URL=https://pokemonshowdown.com/users/YOUR_USER_ID
SHOWDOWN_USER_ID=YOUR_USER_ID
SHOWDOWN_ELO_COOLDOWN_SEC=5
SHOWDOWN_ELO_POLL_SEC=20
